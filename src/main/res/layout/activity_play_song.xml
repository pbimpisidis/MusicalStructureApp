<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/appStyle"
    android:orientation="vertical"
    tools:context=".PlaySongActivity">

    <TextView
        android:id="@+id/playedSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playedSongArtist"
        android:layout_margin="8dp"
        android:text="Song title"
        android:textAlignment="center"
        android:textColor="#999999"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/playedSongArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_button"
        android:layout_margin="8dp"
        android:text="Artist"
        android:textAlignment="center"
        android:textColor="#999999"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/activity_play_song_title"
        android:src="@drawable/play" />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="Back to Library"
        android:textColor="#999999"
        android:textSize="18sp" />

</RelativeLayout>